extends page-base

block content
    div.page-content__main
        div.editVideoWrap
            div.profile__userTitle.changePassword__title
                span Change Title of Video
            if notifMessage 
                span=notifMessage   
            form(id="editVideoForm" method="POST")
                label(for="updateTitle") Title
                input(name="title", placeholder="Video Title", id="updateTitle", class="updateFormInput", value=video.title, required)
                label(for="updateDescription") Description
                input(placeholder="Description",id="updateDescription", class="updateFormInput", required, type="text", name="description", minlength=20, value=video.description)
                label(for="updateHashtags") Hashtags
                input(placeholder="Hashtags, separated by comma.", id="updateHashtags", class="updateFormInput", required, type="text", name="hashtags", value=video.hashtags.join())
                div.updateVideoBtn
                    input(value="Save", type="submit")