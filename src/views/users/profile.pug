extends ../base
include ../mixins/video

block content
    div.profileWrap
        div.page-sidebar
            div.side-logo
                span NOMAD
                span CITY BAR
            div.side-content
                a(class="headerBtn__header-avatar" href=`/users/${loggedInUser._id}`)
                    if loggedInUser.avatarUrl === ""
                        span ðŸ˜€
                    else
                        if loggedInUser && loggedInUser.avatarUrl
                            if loggedInUser.avatarUrl.includes("github")
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src=loggedInUser.avatarUrl) 
                div.side-content__menu
        div.page-content 
            div.profile__data
                img(src=user.avatarUrl).avatar
                h3=user.name
            div.video-grid
                each video in user.videos
                    +video(video)
                else
                    span.empty__message No videos found
block scripts 
    script(src="/static/js/profile.js")

    