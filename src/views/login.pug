extends base

block content
    if errorMessage 
        span=errorMessage
    div.totalWrap
        div.bodyWrap
            div.animationWrap
                div.animationWrap__effect
                    div.glassIllust
                        div.glassIllust__effect
                            div.pink-bubble1
                            div.pink-bubble2
                        div.glassIllust__glassWrap
                            div.glass.left-glass
                            div.glass.right-glass
                    div.website__title NOMAD CITY BAR
                    div.website__slogan
            div.backgroundWrap
                div.loginWrap
                    div.login__title
                        span Login
                    form(id="login-form" method="POST")
                        div.loginFormWrap
                            label(for="login-form__username") Username
                            input(id="login-form__username", name="username", type="text", required, placeholder="Username")
                        div.loginFormWrap
                            label(for="login-form__password") Password
                            input(id="login-form__password", name="password", type="password", required, placeholder="Password") 
                        input(id="login-form__loginBtn", value="Login", type="submit")
                        include partials/social-login
                    div.auth-switch
                        a(href="/join")
                            span Create an account now
                            i.fa-solid.fa-angles-right
block scripts
    script(src="/static/js/loginAnimation.js")